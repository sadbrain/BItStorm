<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BitStorm</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BitStorm.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

</head>
<body>
    <header>
        <div class="navbar">
            <div class="navbar-left" asp-area="" asp-controller="Home" asp-action="Index">
                <img src="~/asset/logo_header.png" alt="Logo" class="logo">
                <h1 class="group-name">BitStorm</h1>
            </div>
            <div class="navbar-center">
                <a class="nav-link text-black"  asp-area="" asp-controller="Home" asp-action="Index" class="current-page">Trang chủ</a>
                <a class="nav-link text-black" asp-area="" asp-controller="ContactExpert" asp-action="Index">
                    Kết nối chuyên gia</a>
                <a class="nav-link text-black" asp-area="" asp-controller="Blog" asp-action="Index">Video</a>
                <a class="nav-link text-black" asp-area="" asp-controller="Post" asp-action="Index">Bài viết</a>
                <a class="nav-link text-black" asp-area="" asp-controller="AboutUs" asp-action="Index">Về chúng tôi</a>
            </div>
            <div class="navbar-right">
                <button class="btn-login btn-header">Đăng nhập</button>
                <button class="btn-register btn-header">Đăng kí</button>
           
            </div>
        </div>
    </header>

        <main role="main" class="pb-3">
            @RenderBody()
        </main>

    <footer class="footer">
        <div class="container">
            <!-- row 1 -->
            <div class="row d-flex justify-content-space-evenly">
                <!-- Cột 1 -->
                <div class="col-md-4 px-3 col ">
                    <!-- Hàng 1 -->
                    <div class="row footer-col footer-col1 d-flex justify-content-start align-items-center">

                        <img class="logo-footer col-5" src="~/asset/logo_footer.png" alt="Logo">
                        <h1 class="mt-2 col-5 group-name-footer">BitStorm</h1>

                    </div>

                    <!-- Hàng 2 -->
                    <div class="row footer-col">
                        <div class="col d-flex align-items-left">
                            <p class="mb-0">Nơi lắng nghe tâm hồn của bạn</p>
                        </div>
                    </div>

                    <!-- Hàng 3 -->
                    <div class="row footer-col">
                        <div class="col d-flex align-items-left">
                            <a href="#"><i class="fab fa-facebook social-icon"></i></a>
                            <a href="#"><i class="fab fa-twitter social-icon"></i></a>
                            <a href="#"><i class="fab fa-instagram social-icon"></i></a>
                            <a href="#"><i class="fab fa-linkedin social-icon"></i></a>
                            <a href="#"><i class="fab fa-youtube social-icon"></i></a>
                        </div>
                    </div>
                </div>

                <!-- Cột 2 -->
                <div class=" col  px-3">
                    <h2 class="column-title">Community</h2>
                    <p class="column-text">About</p>
                    <p class="column-text">Contact Us</p>
                    <p class="column-text">Culture</p>
                    <p class="column-text">Blog</p>
                </div>

                <!-- Cột 3 -->
                <div class=" col  px-3">
                    <h2 class="column-title">Support</h2>
                    <p class="column-text">Getting started</p>
                    <p class="column-text">Help center</p>
                    <p class="column-text">Server status</p>
                    <p class="column-text">Share your feeling</p>
                    <p class="column-text">Phone call support</p>
                </div>

                <!-- Cột 4 -->
                <div class="col  footer-contact px-3">
                    <h2 class="column-title">Contacts Us</h2>
                    <p><i class="fas fa-envelope contact-icon"></i>bitstorm@btst.com</p>
                    <p><i class="fas fa-phone contact-icon"></i>099999 8888</p>
                    <p><i class="fas fa-map-marker-alt contact-icon"></i>Sơn Trà, Đà Nẵng</p>
                </div>
            </div>
            <!-- row 2 -->
            <hr>
            <div class="footer-row2">
                <div><p>Copyright&copy2023</p></div>
                <div>
                    <p>All Rights Reserved | <a href="#">Terms and Conditions</a> | <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy Policy</a></p>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
