@model List<Comment>

@foreach (var comment in Model.OrderByDescending(obj => obj.Id).ToList())
{   
    <div class="post-comment m-2">
        @if(@comment.IsAnonymous){
        <div class="post-comment-avt me-3">
                <img src="https://phunuvietnam.mediacdn.vn/media/news/33abffcedac43a654ac7f501856bf700/anh-profile-tiet-lo-g-ve-ban-1.jpg" alt="anh dai dien" id="img" style="border-radius: 50%; width: 40px; height: 40px;" />
        </div>
        <div class="post-content-comment">

            <p class="name-post">Người dùng ẩn danh</p>
            <p class="content">@comment.Content</p>
        </div>
        }else{
        <div class="post-comment-avt me-3">
            <img src="@comment.User.Url" alt="anh dai dien" id="img" style="border-radius: 50%; width: 40px; height: 40px;" />
        </div>
        <div class="post-content-comment">

            <p class="name-post">@comment.User.Name</p>
            <p class="content">@comment.Content</p>

        </div>

        }
    </div>
}
